<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_config_settings_view_form_custom_inherit_hr_payroll" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.custom.inherit.hr.payroll</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='hr_payroll_localization']" position="after">
          <h2>Montos Globales</h2>
          <div class="row mt16 o_settings_container" id="custom_inherit_hr_payroll">
            <div class="col-lg-6 col-12 o_setting_box">
              <div class="o_setting_left_pane"/>
              <div class="o_setting_right_pane">
                <div class="text-muted">
                  Montos globales para personalizar el salario mínimo,
                  días de vacaciones, días de utilidades, salario cesta ticket
                  y la tasa de prestaciones sociales de los empleados.
                </div>
                <group class="mt16" name="default_advantages">
                  <label for="minimum_salary"/>
                  <div>
                    <field name="minimum_salary" nolabel="1"/>
                  </div>

                  <label for="holidays"/>
                  <div>
                    <field name="holidays" nolabel="1"/>
                  </div>

                  <label for="profit_days"/>
                  <div>
                    <field name="profit_days" nolabel="1"/>
                  </div>

                  <label for="salary_basket_ticket"/>
                  <div>
                    <field name="salary_basket_ticket" nolabel="1"/>
                  </div>

                  <label for="central_bank_social_benefits_rate"/>
                  <div>
                    <field name="central_bank_social_benefits_rate" nolabel="1"/>
                  </div>
                </group>
              </div>

            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo> 