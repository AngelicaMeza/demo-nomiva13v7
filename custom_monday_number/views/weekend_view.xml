<odoo>
    <data>

        <record id="custom_payslip_run_wizzard_form" model="ir.ui.view">
            <field name="name">custom.payslip.run.wizzard.form</field>
            <field name="model">hr.payslip.employees</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_by_employees" />
            <field name="arch" type="xml">
                <xpath expr="//group[2]" position="after">
                    <group colspan="2">
                        <separator string="Departamento" colspan="2"/>
                        <newline/>
                        <span class="text-muted">Seleccione el departamento al cual se le hará el pago de nómina.</span>
                        <field name="department_id" nolabel="1" options="{'no_open':True, 'no_create': True}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!--Número de Sábados y Domingos en Nomina-->
        <record id="custom_hr_payslip_weekend_form" model="ir.ui.view">
            <field name="name">custom.hr.payslip.weekend.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='number']" position="after">
                    <field name="weekend_id" />
                </xpath>
            </field>
        </record>

        <!--Número de Sábados y Domingos en Lotes-->
        <record id="custom_payroll_payslip_run_weekend_form" model="ir.ui.view">
            <field name="name">custom.payroll.payslip.run.weekend.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form" />
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]/group[1]/div[1]" position="after">
                    <field name="weekend_id" />
                </xpath>
            </field>
        </record>

        <!-- Número de Sábados y Domingos -->
        <record id="custom_weekend_tree" model="ir.ui.view">
            <field name="name">custom.weekend.tree</field>
            <field name="model">custom_weekend</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="description"/>
                    <field name="name" />
                    <field name="weekend_date"/>
                </tree>
            </field>
        </record>

        <record id="custom_weekend_form" model="ir.ui.view">
            <field name="name">custom.weekend.form</field>
            <field name="model">custom_weekend</field>
            <field name="arch" type="xml">
                <form string="Número de Sábados y Domingos">
                    <header>
                    </header>
                    <sheet>
                        <group name="group_top" string="Número de Sábados y Domingos">
                            <group name="group_left" style="width:50%;">
                                <field name="description"/>
                                <field name="name" required="True"/>
                            </group>
                            <group name="group_right" style="width:50%;">
                                <field name="weekend_date" required="True"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="custom_weekend_action" model="ir.actions.act_window">
            <field name="name">Número de Sábados y Domingos</field>
            <field name="res_model">custom_weekend</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- actions -->
        <menuitem id="custom_weekend_config" name="Número de Sábados y Domingos" action="custom_weekend_action" parent="hr_payroll.menu_hr_payroll_configuration" sequence="3"/>

    </data>
</odoo>