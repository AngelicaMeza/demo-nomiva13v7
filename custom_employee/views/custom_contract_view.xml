<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="custom_contract_view_form" model="ir.ui.view">
            <field name="name">custom.contract.view.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information_salary_hourly']/group[1]/group[1]" position="after">
                    <separator string="Salarios" colspan="4" />
                    <group>
                        <field name="custom_salary" />
                        <field name="compensated" />
                        <field name="lpvh" />
                        <field name="department_name" invisible="1" />
                        <field name="night_bonus" attrs="{'invisible': [('department_name', '!=', 'Seguridad')]}" />
                    </group>

                    <group name="contact_salary_customization_houry">
                        <field name="compute_field_soo" invisible="1" />
                        <field name="social_security_salary" />
                        <field name="punctuality_bonus" />
                        <field name="salary_basket_ticket" />
                    </group>

                    <group name="retentions_hourly">
                        <field name="social_security" />
                        <field name="forced_unemployment" />
                        <field name="husing_policy_law" />
                        <field name="withholding_discount_rate" />
                    </group>

                </xpath>
            </field>
        </record>

        <!--SSO y Cesta ticket en pagos por lotes-->
        <record id="custom_inherit_payslip_run_view_form" model="ir.ui.view">
            <field name="name">custom.inherit.payslip.run.view.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form" />
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]" position="after">
                    <group>
                        <field name="compute_field_payslip_run" invisible="1"/>
                        <field name="social_security_salary" readonly="1"/>
                        <field name="salary_basket_ticket" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
    

</odoo>
