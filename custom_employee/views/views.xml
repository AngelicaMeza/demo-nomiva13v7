<odoo>
  <data>

    <record id="custom_view_employee_form" model="ir.ui.view">
      <field name="name">custom.view.employee.form</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form" />
      <field name="arch" type="xml">
        <xpath expr="//page[@name='personal_information']/group[1]/group[2]/field[@name='identification_id']" position="after">
          <field name="rif" placeholder="Ej.: J-012345678"/>
        </xpath>
      </field>
    </record>

    <record id="custom_view_employee_form_inherit" model="ir.ui.view">
      <field name="name">custom.view.employee.form.inherit</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form" />
      <field name="arch" type="xml">
        <xpath expr="//page[@name='personal_information']/group/group[1]/field[@name='bank_account_id']" position="after">
          <field name="account_holder_id" required="1"/>
          <field name="holder_id" required="1"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>