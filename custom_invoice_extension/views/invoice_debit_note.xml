<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!-- agregado de campo booleano para identificar las notas de debito -->
    <record id="account_move_inherit_debit_note" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bank_partner_id']" position="after">
                <field name="debit_note" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>