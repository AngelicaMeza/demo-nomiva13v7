<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Formato de la hoja -->
    <record id="paperformat_account_report_invoice_extends" model="report.paperformat">
		<field name="name">paperformat.account.report.invoice</field>
		<field name="default" eval="True"/>
        <field name="format">custom</field>
		<field name="orientation">Portrait</field>
        <field name="page_width">216</field>
        <field name="page_height">280</field>
		<field name="margin_top">30</field>
		<field name="margin_bottom">137</field>
		<field name="margin_left">5</field>
		<field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
	</record>

    <!-- personal layout -->
    <!-- sin cabezera y sin pie -->
    <template id="no_header_footer_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
            <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')" style="font-size: 12px">
                <div class="row" style="height: 3.5cm;">
                    <t t-if="customer_info">
                        <div class="col-3" style="margin-top:15mm;">
                            <t t-raw="customer_info"/>
                        </div>
                    </t>
                    <t t-if="customer_address">
                        <div class="col-5" style="margin-top:15mm;">
                            <t t-raw="customer_address"/>
                        </div>
                    </t>
                    <t t-if="invoice_information">
                        <div class="col-4" >
                            <t t-raw="invoice_information"/>
                        </div>
                    </t>
                </div>
                <div style="height: 5cm;" >
                    <t t-raw="0"/>
                </div>
                <div class="row" >
                    <t t-if="rate_word_amount">
                        <div class="col-6" style="margin-top: 2mm" >
                            <t t-raw="rate_word_amount"/>
                        </div>
                    </t>
                    <t t-if="totales">
                        <div class="col-6" >
                            <t t-raw="totales"/>
                        </div>
                    </t>
                </div>
            </div>
    </template>

    <!-- plantilla de la factura -->
    <template id="report_invoice_client">
        <t t-call="custom_invoice_extension.no_header_footer_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <!-- informacion de la factura -->
            <t t-set="invoice_information">
                <h6 class="text-right">
                    <!-- factura venta -->
                    <span t-if="o.type == 'out_invoice' and o.state == 'posted' and not o.debit_note ">FACTURA </span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'draft' and not o.debit_note ">BORRARDOR DE FACTURA</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'cancel' and not o.debit_note ">FACTURA CANCELADA</span>
                    <!-- nota de credito -->
                    <span t-if="o.type == 'out_refund' and o.state == 'posted'">NOTA DE CREDITO</span>
                    <span t-if="o.type == 'out_refund' and o.state == 'draft'">BORRADOR N/C</span>
                    <!-- nota de debito -->
                    <span t-if="o.type == 'out_invoice' and o.state == 'posted' and o.debit_note ">NOTA DE DEBITO</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'draft' and o.debit_note ">BORRADOR N/D</span>
                    <!-- numero de factura -->
                    <span t-if="o.name" t-field="o.name"/>
                </h6>

                <div>
                    <div class="col mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                        <strong style="font-size:13px">Fecha de emision: </strong><span t-field="o.invoice_date" />
                    </div>
                    <div class="col mw-100 mb-2" t-if="o.invoice_date_due" name="invoice_date_due">
                        <strong style="font-size:13px">Fecha de vencimiento: </strong><span t-field="o.invoice_date_due" />
                    </div>
                    <div class="col mw-100 mb-2" name="invoice_origin">
                        <t t-if="o.type == 'out_invoice' and o.invoice_origin and not o.debit_note">
                            <strong style="font-size:13px">Referencia: </strong><span t-field="o.invoice_origin" />
                        </t>
                        <t t-elif="o.debit_note or o.type == 'out_refund' and o.ref ">
                            <strong style="font-size:13px">Referencia: </strong><span t-field="o.ref" />
                        </t>
                        <t t-elif="o.debit_note or o.type == 'out_refund' and o.invoice_origin ">
                            <strong style="font-size:13px">Referencia: </strong><span t-field="o.ref" />
                        </t>
                    </div>
                </div>
            </t>
            <!-- informacion del cliente -->
            <t t-set="customer_info">
                <div >
                    <strong style="font-size:13px">Cliente: </strong><span t-field="o.partner_id.name" /><br/>
                    <strong style="font-size:13px">RIF: </strong><span t-field="o.rif" /><br/>
                    <strong style="font-size:13px">Telefonos: </strong><span t-field="o.partner_id.phone" />
                </div>
            </t>
            <t t-set="customer_address">
                <div >
                    <strong style="font-size:13px">Domicilio fiscal: </strong><span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True, "no_tag_br": True}' />
                </div>
            </t>

            <!-- items de la factura -->
            <div class="page">
                <t t-set="diferent_currency" t-value="True if o.currency_id != o.company_currency_id else False"/>
                <t t-set="dollar_id" t-value="o.get_dollar_id()"/>
                <table class="table table-sm o_main_table"  name="invoice_line_table">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="6"/>
                            <th name="th_description" class="text-left"><span style="font-size:13px">Descripci√≥n</span></th>
                            <th name="th_quantity" class="text-right"><span style="font-size:13px">Cantidad</span></th>
                            <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span style="font-size:13px">Precio unitario</span></th>
                            <th name="th_subtotal_es_VE" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span style="font-size:13px">Sub-Total en Bolivares</span></th>
                            <th name="th_subtotal_USD" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span style="font-size:13px">Sub-Total en Dolares</span></th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <!-- descripcion -->
                                    <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                    <!-- cantidad -->
                                    <td class="text-right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                    </td>

                                    <!-- precio unitario -->
                                    <t t-if="diferent_currency">
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <t t-set="price_unit" t-value="o.currency_id._convert(line.price_unit, o.company_currency_id, o.company_id, o.date, True)"/>
                                            <span class="text-nowrap" t-esc="price_unit" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <t t-set="price_unit" t-value="o.currency_id.round(line.price_unit)"/>
                                            <span class="text-nowrap" t-esc="price_unit" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}" />
                                        </td>
                                    </t>

                                    <!-- subtotal Bolivares y Dolares -->
                                    <t t-if="diferent_currency">
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <t t-set="price_subtotal" t-value="o.currency_id._convert(line.price_subtotal, o.company_currency_id, o.company_id, o.date, True)"/>
                                            <span class="text-nowrap" t-esc="price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}"/>
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <t t-set="price_subtotal" t-value="o.currency_id.round(line.price_subtotal)"/>
                                            <span class="text-nowrap" t-esc="price_subtotal"  t-options="{'widget': 'monetary', 'display_currency': dollar_id}"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <t t-set="price_subtotal" t-value="o.currency_id.round(line.price_subtotal)"/>
                                            <span class="text-nowrap" t-esc="price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}" />
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <t t-set="price_subtotal" t-value="o.currency_id._convert(line.price_subtotal, dollar_id, o.company_id, o.date, True)"/>
                                            <span class="text-nowrap" t-esc="price_subtotal" t-options="{'widget': 'monetary', 'display_currency': dollar_id}" />
                                        </td>
                                    </t>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <t t-set="totales" >
                <div class="clearfix" style="margin-top: 5mm;" >
                    <div id="total">
                        <table class="table table-sm" style="page-break-inside: avoid;">
                            <tr class="border-black o_subtotal" style="">
                                <td><strong style="font-size:13px">SUBTOTAL</strong></td>
                                <t t-if="diferent_currency">
                                    <td class="text-right">
                                        <t t-set="subtotal" t-value="o.currency_id._convert(o.amount_untaxed, o.company_currency_id, o.company_id, o.date, True)"/>
                                        <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                    <t t-set="subtotal" t-value="o.currency_id.round(o.amount_untaxed)"/>
                                        <t t-set="subtotal" t-value="o.currency_id.round(o.amount_untaxed)"/>
                                        <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': dollar_id}" />
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="text-right">
                                        <t t-set="subtotal" t-value="o.currency_id.round(o.amount_untaxed)"/>
                                        <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}" />
                                    </td>
                                    <td class="text-right">
                                        <t t-set="subtotal" t-value="o.currency_id._convert(o.amount_untaxed, dollar_id, o.company_id, o.date, True)"/>
                                        <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': dollar_id}"/>
                                    </td>
                                </t>
                                
                            </tr>
                            <!-- impuestos -->
                            <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                <tr>
                                    <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                        <td><span class="text-nowrap" style="font-size:13px" t-esc="amount_by_group[0]"/></td>
                                            <t t-if="diferent_currency">
                                                <td class="text-right">
                                                    <t t-set="tax" t-value="o.currency_id._convert(amount_by_group[1], o.company_currency_id, o.company_id, o.date, True)"/>
                                                    <span t-esc="tax" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <t t-set="tax" t-value="o.currency_id.round(amount_by_group[1])"/>
                                                    <span t-esc="tax" t-options="{'widget': 'monetary', 'display_currency': dollar_id}" />
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td class="text-right">
                                                    <t t-set="tax" t-value="o.currency_id.round(amount_by_group[1])"/>
                                                    <span t-esc="tax" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}" />
                                                </td>
                                                <td class="text-right">
                                                    <t t-set="tax" t-value="o.currency_id._convert(amount_by_group[1], dollar_id, o.company_id, o.date, True)"/>
                                                    <span t-esc="tax" t-options="{'widget': 'monetary', 'display_currency': dollar_id}"/>
                                                </td>
                                            </t>
                                    </t>
                                    <t t-else="">
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span class="text-nowrap" t-esc="amount_by_group[1]"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr class="border-black o_total">
                                <td><strong style="font-size:13px">TOTAL</strong></td>
                                <t t-if="diferent_currency">
                                    <td class="text-right">
                                        <t t-set="amount_total" t-value="o.currency_id._convert(o.amount_total, o.company_currency_id, o.company_id, o.date, True)"/>
                                        <span t-esc="amount_total" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-set="amount_total" t-value="o.currency_id.round(o.amount_total)"/>
                                        <span t-esc="amount_total" t-options="{'widget': 'monetary', 'display_currency': dollar_id}" />
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="text-right">
                                        <t t-set="amount_total" t-value="o.currency_id.round(o.amount_total)"/>
                                        <span t-esc="amount_total" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}" />
                                    </td>
                                    <td class="text-right">
                                        <t t-set="amount_total" t-value="o.currency_id._convert(o.amount_total, dollar_id, o.company_id, o.date, True)"/>
                                        <span t-esc="amount_total" t-options="{'widget': 'monetary', 'display_currency': dollar_id}"/>
                                    </td>
                                </t>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
            <t t-set="rate_word_amount" >
                Tasa cambiaria establecida por el Banco Central de Venezuela <span t-esc="o.currency_id._get_conversion_rate(dollar_id, o.company_currency_id, o.company_id, o.date)" t-options="{'widget': 'monetary', 'display_currency': o.company_currency_id}"/><br/>
                <span t-field="o.son"/>
            </t>
        </t>
    </template>

    <!-- separacion de las llamadas a las facturas con el formato modificado -->
    <template id="account.report_invoice_with_payments">
        <!-- facturas modificadas -->
        <t t-foreach="docs" t-as="o">
            <t t-if="o.type == 'out_invoice' or o.type == 'out_refund'">
                <t t-foreach="range(3)" t-as="i">
                    <t t-call="web.html_container">
                        <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                        <t t-call="custom_invoice_extension.report_invoice_client" t-lang="lang"/>
                    </t>
                </t>
            </t>
            <t t-else=""><!-- facturas originales -->
                <t t-call="web.html_container">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="account.report_invoice_document_with_payments" t-lang="lang"/>
                </t>
            </t>
        </t>
    </template>

    <!-- enlace del paparformat-->
    <record id="account.account_invoices" model="ir.actions.report">
		<field name="paperformat_id" ref="custom_invoice_extension.paperformat_account_report_invoice_extends"/>
	</record>
    

</odoo>
